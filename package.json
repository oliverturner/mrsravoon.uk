  "dependencies": {
    "@rollup/plugin-commonjs": "15.1.0",
    "@rollup/plugin-node-resolve": "9.0.0",
    "@rollup/plugin-typescript": "6.0.0",
    "luxon": "1.25.0",
    "rollup-plugin-svelte": "6.0.1",
    "svelte": "3.29.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "0.11.0",
    "@11ty/eleventy-navigation": "^0.1.5",
    "@babel/core": "7.11.6",
    "@babel/preset-env": "7.11.5",
    "@babel/preset-typescript": "7.10.4",
    "@testing-library/svelte": "3.0.0",
    "@tsconfig/svelte": "1.0.10",
    "@types/jest": "26.0.14",
    "@types/luxon": "1.25.0",
    "@types/markdown-it": "10.0.2",
    "@types/markdown-it-anchor": "^4.0.3",
    "@types/markdown-it-container": "^2.0.2",
    "@types/node": "14.11.2",
    "@types/serve-static": "1.13.5",
    "acorn": "8.0.3",
    "autoprefixer": "10.0.1",
    "babel-eslint": "10.1.0",
    "babel-jest": "26.3.0",
    "clean-css": "^4.2.1",
    "eslint": "7.10.0",
    "eslint-plugin-jest": "24.0.2",
    "html-minifier": "^4.0.0",
    "husky": "4.3.0",
    "jest": "26.4.2",
    "lint-staged": "10.4.0",
    "markdown-it": "11.0.1",
    "markdown-it-abbr": "^1.0.4",
    "markdown-it-anchor": "6.0.0",
    "markdown-it-deflist": "2.1.0",
    "markdown-it-div": "^1.1.0",
    "markdown-it-footnote": "^3.0.2",
    "markdown-it-implicit-figures": "0.10.0",
    "markdown-it-sup": "^1.0.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.1.1",
    "postcss-load-config": "3.0.0",
    "prettier": "2.1.2",
    "rollup": "2.28.2",
    "sass": "1.26.11",
    "stylelint": "13.7.2",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-selector-bem-pattern": "2.1.0",
    "svelte-check": "1.0.55",
    "svelte-jester": "1.1.5",
    "svelte-preprocess": "4.3.2",
    "ts-jest": "26.4.1",
    "tslib": "2.0.1",
    "typescript": "4.0.3",
    "uglify-es": "^3.3.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run prettier"
    ],
    "*.css": [
      "npm run prettier",
      "npm run lint:css"
    ],
    "*.scss": [
      "npm run prettier",
      "npm run lint:css"
    ]
  },
  "scripts": {
    "rollup:dev": "rollup -cw",
    "clean": "git clean -fxdi",
    "prettier": "prettier --write '**/*.{js,json,css,scss,ts}'",
    "test": "jest",
    "lint:css": "stylelint ./client/styles/**/*.scss",
    "lint:js": "eslint ./tools/**/*.js ./client/js/**/*.js",
    "lint:ts": "tsc",
    "lint": "run-s lint:*",
    "debug": "DEBUG=Eleventy* npx @11ty/eleventy",
    "dev:eleventy": "npx eleventy --serve",
    "dev": "run-p dev:*",
    "build:eleventy": "NODE_ENV=production npx eleventy",
    "build:rollup": "rollup -c",
    "build": "run-p build:*"
  }
}
