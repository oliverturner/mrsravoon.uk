{
  "name": "ravoon.uk",
  "description": "Alternative Endings to an Unwritten Ballad",
  "version": "1.0.3",
  "homepage": "https://www.ravoon.uk",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/oliverturner/ravoon.uk"
  },
  "author": {
    "name": "Oliver Turner",
    "email": "oliver.turner@codedsignal.co.uk",
    "url": "https://www.codedsignal.co.uk"
  },
  "bugs": {
    "url": "https://github.com/oliverturner/ravoon.uk/issues"
  },
  "dependencies": {
    "@11ty/eleventy-navigation": "^0.1.5",
    "autoprefixer": "9.8.5",
    "clean-css": "^4.2.1",
    "html-minifier": "^4.0.0",
    "postcss": "7.0.32",
    "sass": "1.26.10",
    "uglify-es": "^3.3.9"
  },
  "devDependencies": {
    "@11ty/eleventy": "0.11.0",
    "@babel/core": "7.10.5",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "babel-eslint": "10.1.0",
    "eslint": "7.4.0",
    "eslint-plugin-jest": "23.18.0",
    "husky": "4.2.5",
    "jest": "26.1.0",
    "lint-staged": "10.2.11",
    "luxon": "^1.22.2",
    "markdown-it": "11.0.0",
    "markdown-it-anchor": "^5.2.7",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "rollup": "2.22.0",
    "stylelint": "13.6.1",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-selector-bem-pattern": "2.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run prettier",
      "npm run lint:js -- --fix"
    ],
    "*.css": [
      "npm run lint:css"
    ],
    "*.scss": [
      "npm run lint:css"
    ]
  },
  "scripts": {
    "clean": "git clean -fxdi",
    "prettier": "prettier --write '**/*.{js,json}'",
    "test": "jest",
    "lint:css": "stylelint ./src/styles/**/*.scss",
    "lint:js": "eslint ./src/js/**/*.js",
    "lint": "run-s lint:*",
    "rollup": "rollup -c ./tools/rollup.config.js",
    "build:eleventy": "npx eleventy",
    "build:js": "npm run rollup",
    "build": "run-p build:*",
    "dev:js": "npm run rollup -- -w",
    "dev:eleventy": "npx eleventy --serve",
    "dev": "run-p dev:*"
  }
}
