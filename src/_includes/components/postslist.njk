<section class="sightings">
	{% for post in postslist %}
		<article class="sighting" {% if post.url == url %} data-current="current item" {% endif %}>
			<h3 class="sighting__title">
				<a class="sighting__title__link" href="{{ post.url | url }}">{{ post.data.title }}</a>
				<span>by</span>
				<small>{{ post.data.author }}</small>
			</h3>
			{% if post.data.summary %}
				<p>
					{{ post.data.summary | md | safe }}
				</p>
			{% endif %}
			{% if post.data.tags %}
				<div class="tags">
					{% for tag in post.data.tags %}
						{%- if tag != "post" -%}
							{% set tagUrl %}/tags/{{ tag }}/{% endset %}
							<a class="tag" href="{{ tagUrl | url }}">{{ tag }}</a>
						{%- endif -%}
					{% endfor %}
				</div>
			{% endif %}
		</article>
	{% endfor %}
</section>
